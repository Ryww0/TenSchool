{% extends 'base-back.html.twig' %}

{% block title %}Classe détails{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ classroom.name }}</h1>
        <h2>Liste des élèves</h2>
        <a href="{{ path('app_admin_classroom_edit', {'classroom': classroom.id}) }}">Ajouter des élèves</a>
        <ul>
            {% for user in users %}
                <li>{{ user.firstname }} {{ user.lastname }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}