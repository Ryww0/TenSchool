        <div>
            <h4>{{ lesson.title }}</h4>
            <h5>{{ lesson.subject.title }}</h5>
        </div>
        <div>
            <span class="date-created">{{ lesson.dateCreated|date('d/m/Y H:i:s') }}</span>
        </div>
    </div>
    <div>
        <p>{{ lesson.description }}</p>
    </div>
</div>